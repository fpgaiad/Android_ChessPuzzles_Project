<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="br.com.fpg.chesspuzzles.ui.PuzzleFragment">

    <TextView
        android:id="@+id/txt_puzzle_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#898989"
        android:text="1."
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_chess_table"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/puzzle01" />

    <TextView
        android:id="@+id/txt_max_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingTop="8dp"
        android:text="mate em dois lances"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_puzzle_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="fonte: Illustrated London News"
        android:textColor="#898989"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>
